
<header style="text-align:center;margin-top:20px">
  <h1><strong>TinyApp</strong></h1>
    <% if (!user) { %>
    |
     <a href='/login'>Login</a>
     |
     <a href='/register'>Register</a>
     |
  <% } else { %>
    <h5><i><%= `Logged in as: ${user['email']}` %></i></h5>
    <form method="POST" action="/logout" style="margin-bottom:0px">
        <button>Logout</button>
    </form>
    |
    <a href="/urls/new">Create a new short link </a>
    |
    <a href="/urls">URL list</a>
    |
  <% } %>

</header>

